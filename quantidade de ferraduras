import java.util.Scanner;
public class questao6 {
public static void main(String[] args) {
Scanner scanner = new Scanner(System.in);
System.out.print("Digite a quantidade total de cavalos no haras: ");
int totalCavalos = scanner.nextInt();
scanner.close();
int quantidadeFerraduras = totalCavalos * 4;
System.out.println("São necessárias " + quantidadeFerraduras + "
ferraduras para equipar todos os cavalos.");
}
}
